<h2 class="title is-2">All Villagers</h2>

    <% @villagers.each do |villager|%>
    <ul class="ml-5">
    <li>
        <%= link_to villager.name, villager %>
    </li>
</ul>
        <figure class="image is-128x128">
        <img src=<%= villager.icon_image %> alt="villager_image">
    </figure>
    <% end %>


